<td width="157" align="left"><a href="../startup.html" target="_parent" onclick="wiiSelectSound()" onmouseover="MM_swapImage('return','','../common_data/CHM_common_source_ro/return_index_button_ro.png',1);wiiFocusSound()" onmouseout="MM_swapImgRestore()"><img src="../common_data/CHM_common_source/return_index_button.png" name="return" width="130" height="77" border="0" id="return" /></a></td>
